# Tapo P110 Configuration
TAPO_IP=192.168.1.100
TAPO_USERNAME=your_tapo_username
TAPO_PASSWORD=your_tapo_password

# Client Configuration
CLIENT_ID=unraid-client
REMOTE_BASE=/mnt/remotes
DEST_BASE=/mnt/users
RSYNC_OPTIONS=-avz --progress --delete --stats
SHUTDOWN_DELAY=1800
DRY_RUN=true

# ZFS Configuration
ZFS_POOL=tank
ZFS_PARENT_DATASET=users
CREATE_SNAPSHOTS=true

# Volume Mounts
DEST_MOUNT_PATH=/mnt/user
REMOTE_MOUNT_PATH=/mnt/remotes